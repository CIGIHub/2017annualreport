{
  "name": "cigi",
  "version": "0.1.0",
  "description": "cigi annual report",
  "private": true,
  "scripts": {
    "lint:js": "eslint ./js/custom/**/*.js",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint:css": "stylelint ./assets/css/main.scss ./_assets/css/custom/**/*.scss",
    "lint:css:fix": "npm run lint:css -- --fix",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:fix": "npm run lint:js:fix && npm run lint:css:fix",
    "dev": "concurrently 'webpack-dev-server --config=webpack.config.dev.js' 'bundle exec jekyll serve --config _config.dev.yml'",
    "clean": "rm -f assets/bundle* && rm -rf _site/* && rm -rf node_modules/gh-pages/.cache/*",
    "build": "npm run clean && HASH=$(node ./node_modules/.bin/webpack --config webpack.config.prod.js | sed 's/Hash: //') JEKYLL_ENV=production bundle exec jekyll build",
    "deploy": "npm run build && node deploy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rangle/cigi.git"
  },
  "author": "",
  "homepage": "https://rangle.github.io/cigi",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "concurrently": "^3.5.0",
    "eslint": "^4.2.0",
    "eslint-import-resolver-webpack": "^0.8.3",
    "eslint-plugin-import": "^2.7.0",
    "express": "^4.16.2",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "gh-pages": "^1.0.0",
    "nodemailer": "^4.4.0",
    "stylelint": "^8.0.0",
    "stylelint-config-sass-guidelines": "^2.2.0",
    "stylelint-processor-ignore-front-matter": "^0.1.0",
    "webpack": "^3.7.1",
    "webpack-dev-server": "^2.9.4"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "modules": false,
          "loose": true
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended"
    ],
    "plugins": [
      "import"
    ],
    "rules": {
      "comma-dangle": [
        2,
        "always-multiline"
      ],
      "comma-spacing": [
        2,
        {
          "before": false,
          "after": true
        }
      ],
      "computed-property-spacing": [
        2,
        "never"
      ],
      "func-call-spacing": [
        2,
        "never"
      ],
      "key-spacing": [
        2,
        {
          "beforeColon": false,
          "afterColon": true
        }
      ],
      "keyword-spacing": [
        2,
        {
          "before": true,
          "after": true,
          "overrides": {
            "return": {
              "after": true
            },
            "throw": {
              "after": true
            },
            "case": {
              "after": true
            }
          }
        }
      ],
      "no-mixed-spaces-and-tabs": 2,
      "no-shadow": 2,
      "no-spaced-func": 2,
      "no-trailing-spaces": [
        2,
        {
          "skipBlankLines": false,
          "ignoreComments": false
        }
      ],
      "no-whitespace-before-property": 2,
      "object-curly-spacing": [
        2,
        "always"
      ],
      "prefer-const": 2,
      "quotes": [
        2,
        "single",
        {
          "avoidEscape": true
        }
      ],
      "semi": [
        2,
        "always"
      ],
      "semi-spacing": [
        2,
        {
          "before": false,
          "after": true
        }
      ],
      "space-before-blocks": 2,
      "space-before-function-paren": [
        2,
        {
          "anonymous": "always",
          "named": "never",
          "asyncArrow": "always"
        }
      ],
      "space-in-parens": [
        2,
        "never"
      ],
      "space-infix-ops": 2,
      "space-unary-ops": [
        2,
        {
          "words": true,
          "nonwords": false,
          "overrides": {}
        }
      ],
      "spaced-comment": [
        2,
        "always",
        {
          "line": {
            "exceptions": [
              "-",
              "+"
            ],
            "markers": [
              "=",
              "!"
            ]
          },
          "block": {
            "exceptions": [
              "-",
              "+"
            ],
            "markers": [
              "=",
              "!"
            ],
            "balanced": true
          }
        }
      ],
      "switch-colon-spacing": [
        2,
        {
          "after": true,
          "before": false
        }
      ],
      "template-tag-spacing": [
        2,
        "never"
      ],
      "import/no-unresolved": 2,
      "import/named": 2,
      "import/export": 2,
      "import/namespace": 2,
      "import/default": 2
    },
    "parserOptions": {
      "sourceType": "module"
    },
    "settings": {
      "import/resolver": {
        "webpack": {
          "config": "webpack.config.dev.js"
        }
      }
    },
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    }
  },
  "stylelint": {
    "extends": "stylelint-config-sass-guidelines",
    "processors": [
      "stylelint-processor-ignore-front-matter"
    ],
    "rules": {
      "max-nesting-depth": null,
      "color-named": null
    }
  },
  "dependencies": {
    "nodemailer": "^4.4.0"
  }
}
